<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Combine</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="~/assets/favicon.svg" type="image/x-icon" />
  <link rel="stylesheet" type="text/css" href="~/css/style.css" />
  <script src="~/js/script.js" defer></script>
  <script src="~/js/ButtonCount.js"></script>
  <link rel="stylesheet" href="~/css/_profile.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script>
    function showImage(img) {
      var modal = document.getElementById('modal');
      var modalImg = document.getElementById('modalImage');

      modal.style.display = 'flex';
      modalImg.src = img.src;

      // Fotoğrafın oranını alıp boyutlandırmak için aspect ratio hesaplaması
      var aspectRatio = img.width / img.height;

      // Modal'ın içerisindeki .modal-content'i seçin
      var modalContent = document.querySelector('.modal-content');

      // Yeni bir genişlik ve yükseklik değeri belirleyin
      var newWidth = window.innerWidth * 0.45; // Örneğin, ekran genişliğinin %90'ı
      var newHeight = newWidth / aspectRatio; // Aspect ratio'ya göre yeni yükseklik hesapla

      // Yeni boyutları modal içeriği üzerine uygula
      modalContent.style.width = newWidth + 'px';
      modalContent.style.height = newHeight + 'px';

      modal.style.top = '0%';

      modal.onclick = function () {
        closeModal();
      };
    }

    function closeModal() {
      var modal = document.getElementById('modal');
      modal.style.display = 'none';
    }
  </script>
  <style>
    #modal {
      display: none;
      position: fixed;
      z-index: 9999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0, 0, 0);
      background-color: rgba(0, 0, 0, 0.5);
    }

    #modalContent {
      position: relative;
      margin: auto;
      display: block;
      width: 80%;
      max-width: 700px;
    }

    #modalImage {
      width: 20%;
      height: auto;
      display: block;
      margin: auto;
    }

    .side-menu__footer {
      bottom: 30px;
      left: 0px;
      width: 100%;
      height: 50px;
      padding: 15px;
    }
  </style>
</head>

<body>
  @await Html.PartialAsync("_Header",Repository.GetById(1))
  @RenderBody()
  @await Html.PartialAsync("_Footer")
</body>


</html>