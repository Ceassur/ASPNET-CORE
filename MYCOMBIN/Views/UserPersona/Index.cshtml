@model UserPersona
<div class="container">
    <h2>Horizontal form</h2>
    <br>
    <br>
    <br>
    <br>
    <br>
    <form class="form-horizontal" asp-controller="UserPersona" asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="UserId" class="control-label col-sm-2">Kullanıcılar:</label>
            <select asp-for="UserId" asp-items="ViewBag.Users" class="form-controller form-select"></select>
        </div>

        <div class="form-group">
            <label asp-for="PersonaId" class="control-label col-sm-2">Personalar:</label>
            <select asp-for="PersonaId" asp-items="ViewBag.Personas" class="form-controller form-select"></select>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Kaydet</button>
            </div>
        </div>
          
    </form>
</div>