<div class="container">
    <h2>Horizontal form</h2>
    <br>
    <br>
    <br>
    <br>
    <br>
    <p>@ViewData["HeaderName"]</p>
    <form class="form-horizontal" asp-controller="Persona" asp-action="create" method="post">
        <!--Action kısmı login kotrollera yönlendir-->

        <div class="form-group">
            <label class="control-label col-sm-2" for="MinAge">Minimum Yaş:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MinAge" placeholder="MinAge" name="MinAge" maxlength="30">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="MaxAge">Max Yaş:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MaxAge" placeholder="MaxAge" name="MaxAge" maxlength="20">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Description">Açıklama:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Description" placeholder="Description" name="Description"
                    maxlength="20">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Kaydet</button>
            </div>
        </div>
    </form>
</div>