@model DTOLayer.DTOs.ContactDTOs.SendMessageDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                               Merhaba sevgili gezgin, bize 7 gün 24 saat whatsapp, mail, mesaj gibi iletişim ağlarımız üzerinden ulaşabilirsin.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail Adresimiz:</h6>
                            <p>
                                <a href="berat.cesur.traversal@gmail.com">
                                    mail@traversal.com
                                </a>
                            </p>
                            <h6 class="mt-4">Adresimiz:</h6>
                            <p>Park Plaza, Maslak, Eski Büyükdere Cd. No:14, 34396 Sarıyer/İstanbul </p>
                            <h6 class="mt-4">Telefon:</h6>
                            <p class="margin-top"><a href="tel:+90-212-366-88">+90-212-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text"  placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" placeholder="Mail Adresiniz*" asp-for="Mail" class="contact-input" required="" />
                                <span asp-validation-for="Mail" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Konu*" asp-for="Subject" class="contact-input" />
                                <span asp-validation-for="Subject" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <textarea placeholder="Mesajınız*" asp-for="MessageBody" required=""></textarea>
                            <span asp-validation-for="MessageBody" class="text-danger"></span>

                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12024.844437320258!2d29.0182!3d41.1080803!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab5c3e1d0323b%3A0xdcf1ead83c02b98d!2sPark%20Plaza!5e0!3m2!1str!2str!4v1709893304733!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>

