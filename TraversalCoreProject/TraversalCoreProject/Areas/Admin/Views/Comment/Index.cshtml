@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Blog</th>
        <th>Tarih</th>
        <th>Sil</th>
        
    </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.CommentID</td>
            <td>@item.AppUser.Name @item.AppUser.Surname</td> 
            <td>@item.Destination.city</td>
            <td>@(((DateTime)item.CommentDate).ToString("dd-MM-yyyy"))</td>
            <td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>